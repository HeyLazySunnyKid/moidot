{{- if eq .chezmoi.osRelease.name "Arch Linux" -}}
#!/bin/bash

#! ansible-playbook -i localhost, -c local /dev/stdin <<'EOF'
- name: "Install packages"
  hosts: localhost
  become: false
  gather_facts: false
  vars:
    install_galaxy_modules:
      - "kewlfft.aur" 
  tasks:
    - name: Install package | fakeroot
      become: true
      package:
        name: fakeroot

    - name: Create src dir
      file:
        path: ~/.src
        state: directory
      
    - name: Clone yay
      git:
        repo: https://aur.archlinux.org/yay-bin.git
        dest: "~/.src/yay"
        update: true

    - name: Build and install yay
      command:
        chdir: "~/.src/yay"
        cmd: "makepkg -sfi --noconfirm"
        creates: /usr/bin/yay
EOF

{{ end }}
